<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
              android:orientation="vertical"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp">

    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Track Rating"
            android:layout_marginTop="5dp" />

    <View
            android:layout_width="fill_parent"
            android:layout_height="2dp"
            android:background="@android:color/darker_gray"
            android:layout_marginTop="5dp"
            />

    <RatingBar
            android:id="@+id/track_rating_bar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Last.fm Track rating"
            android:id="@+id/lfmRatingLabel"
            android:layout_marginTop="5dp"/>
    <View
            android:layout_width="fill_parent"
            android:layout_height="2dp"
            android:background="@android:color/darker_gray"
            android:layout_marginTop="5dp"/>

    <ImageButton
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:id="@+id/lfmLoveButton"
            android:contentDescription=""/>

    <ImageButton
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:id="@+id/lfmBanButton"
            android:contentDescription=""/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Library"
            android:id="@+id/libBrowserLabel"
            android:layout_marginTop="5dp"/>
    <View
            android:layout_width="fill_parent"
            android:layout_height="2dp"
            android:background="@android:color/darker_gray"
            android:layout_marginTop="5dp"/>

    <ImageButton
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:id="@+id/artistButton"

            />

</LinearLayout>