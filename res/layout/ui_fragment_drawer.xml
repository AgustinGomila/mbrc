<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
              android:orientation="vertical"
              android:background="@drawable/menu_item_background">

    <View
            android:layout_width="fill_parent"
            android:layout_height="2dp"
            android:background="@android:color/holo_blue_dark"/>

    <ImageButton
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:id="@+id/lfmLoveButton"
            android:contentDescription=""/>

    <ImageButton
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:id="@+id/lfmBanButton"
            android:contentDescription=""/>


    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Library"
            android:id="@+id/menuLibrary"
            android:layout_gravity="left|center_vertical"
            style="@style/Menu.Title"/>
    <View
            android:layout_width="fill_parent"
            android:layout_height="2dp"
            android:background="@android:color/holo_blue_dark"/>

    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Now Playing List"
            android:id="@+id/menuNowPlaying"
            android:layout_gravity="left|center_vertical"
            android:drawableLeft="@drawable/ic_action_playlist"
            style="@style/Menu.Title"
            />
    <View
            android:layout_width="fill_parent"
            android:layout_height="2dp"
            android:background="@android:color/holo_blue_dark"/>

    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Lyrics"
            android:id="@+id/menuLyrics"
            android:layout_gravity="left|center_vertical"
            android:drawableLeft="@drawable/ic_action_lyrics"
            style="@style/Menu.Title"
            />

    <View
            android:layout_width="fill_parent"
            android:layout_height="2dp"
            android:background="@android:color/holo_blue_dark"/>

    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Settings"
            android:id="@+id/menuSettings"
            android:layout_gravity="left|center_vertical"
            android:drawableLeft="@drawable/ic_action_settings"
            style="@style/Menu.Title"
            />

</LinearLayout>