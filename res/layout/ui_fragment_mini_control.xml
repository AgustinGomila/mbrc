<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginTop="1dp"
        android:background="@color/abs__background_holo_dark">

    <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="#ffffff"/>

    <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

        <ImageView
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:id="@+id/mc_track_cover"
                android:src="@drawable/ic_image_no_cover"
                android:scaleType="fitCenter"
                android:padding="1dp"/>

        <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:id="@+id/relativeLayout"
                android:layout_marginLeft="8dp"
                android:layout_gravity="left"
                android:layout_weight="1">

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#FFFFFF"
                    android:singleLine="true"
                    android:ellipsize="end"
                    android:text="Title goes here"
                    android:textSize="16sp"
                    android:id="@+id/mc_track_title"
                    android:layout_gravity="left|center_vertical"
                    android:layout_marginTop="4dp"/>

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:text="Artist goes here"
                    android:id="@+id/mc_track_artist"
                    android:layout_gravity="left|center_vertical"
                    android:layout_alignParentStart="false"
                    />

        </LinearLayout>

        <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:baselineAligned="false"
                >

            <ImageButton
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:id="@+id/mc_prev_track"
                    android:background="@drawable/selectable_background_mbrc_default"
                    android:src="@drawable/ic_np_previous_holder"
                    android:baselineAlignBottom="false"
                    />

            <ImageButton
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:id="@+id/mc_play_pause"
                    android:background="@drawable/selectable_background_mbrc_default"
                    android:src="@drawable/ic_np_play_holder"
                    android:baselineAlignBottom="false"
                    />

            <ImageButton
                    android:layout_width="45dp"
                    android:layout_height="fill_parent"
                    android:id="@+id/mc_next_track"
                    android:background="@drawable/selectable_background_mbrc_default"
                    android:src="@drawable/ic_np_next_holder"
                    android:baselineAlignBottom="false"
                    />

        </LinearLayout>

    </LinearLayout>


</RelativeLayout>