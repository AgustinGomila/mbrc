<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="48dp"
              android:layout_marginTop="4dp"
              android:layout_marginBottom="4dp"
              android:layout_marginLeft="16dp"
              android:layout_marginRight="16dp"
              android:background="@drawable/ui_list_item_background"
              android:gravity="center_vertical">

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_toLeftOf="@+id/cs_list_default"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp">

        <TextView
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:text="Computer Name"
                android:id="@+id/cs_list_name"
                android:lines="1"
                android:linksClickable="false"
                android:textSize="16sp"
                android:layout_weight="1"/>

        <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:orientation="horizontal"
                android:layout_weight="1">

            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="192.168.100.10"
                    android:id="@+id/cs_list_host"
                    android:textSize="14sp"
                    android:layout_weight="1"/>

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="3565"
                    android:textSize="14sp"
                    android:id="@+id/cs_list_port"
                    />
        </LinearLayout>
    </LinearLayout>

    <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/cs_list_default"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="8dp"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp"
            android:layout_alignParentEnd="true"
            android:contentDescription="Represents if this connection is the default selected connection"/>

</RelativeLayout>