<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="kelsos.mbremote"
    android:versionCode="1"
    android:versionName="0.1 Alpha" >
    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="8" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <application
        android:description="@string/app_description"
        android:icon="@drawable/ic_app_logo"
        android:label="@string/app_name"
        android:theme="@android:style/Theme.NoTitleBar" >
        <activity android:name=".MainActivity" >
            <intent-filter>
                <action android:name="kelsos.mbremote.action.LYRICS_DATA" />
                <action android:name="kelsos.mbremote.action.SHUFFLE_STATE" />
                <action android:name="kelsos.mbremote.action.REPEAT_STATE" />
                <action android:name="kelsos.mbremote.action.SCROBBLER_STATE" />
                <action android:name="kelsos.mbremote.action.MUTE_STATE" />
                <action android:name="kelsos.mbremote.action.PLAY_STATE" />
                <action android:name="kelsos.mbremote.action.VOLUME_DATA" />
                <action android:name="kelsos.mbremote.action.SONG_DATA" />
                <action android:name="kelsos.mbremote.action.SONG_COVER" />
                <action android:name="kelsos.mbremote.action.CONNECTION_STATUS" />
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".AppPreferenceActivity" >
        </activity>
        <activity android:name=".PlaylistActivity" >
            <intent-filter>
                <action android:name="kelsos.mbremote.action.PLAYLIST_DATA" />
            </intent-filter>
        </activity>
        <service
            android:name=".Network.ConnectivityHandler"
            android:description="@string/connectivity_handler_description"
            android:exported="false"
            android:permission="android.permission.READ_PHONE_STATE" >
            <intent-filter>
                <action android:name="android.intent.action.PHONE_STATE" />
                <action android:name="android.net.wifi.STATE_CHANGE" />
                <action android:name="kelsos.mbremote.action.SONG_CHANGED" />
            </intent-filter>
        </service>
    </application>
</manifest>