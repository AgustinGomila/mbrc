<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Menu"/>
    <style name="Menu.Title">
        <item name="android:background">@drawable/selectable_menu_item</item>
        <item name="android:textAppearance">?android:attr/textAppearance</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:textSize">18sp</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">32dp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:drawablePadding">16dp</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="RatingBar" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/ui_rating_bar</item>
        <item name="android:maxHeight">24dip</item>
        <item name="android:minHeight">24dip</item>
    </style>

    <style name="ActioBarStyle" parent="Base.Theme.AppCompat.Light">
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:windowActionBarOverlay">true</item>

        <!-- Support library compatibility -->
        <item name="background">@color/colorPrimary</item>
        <item name="windowActionBarOverlay">true</item>
    </style>

    <style name="PopupStyle" parent="@style/ThemeOverlay.AppCompat.Dark">
        <item name="android:background">@color/mbrc_background</item>
        <item name="background">@color/mbrc_background</item>
    </style>
</resources>